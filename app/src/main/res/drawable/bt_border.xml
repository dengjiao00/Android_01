<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
<item android:state_pressed="true">
    <shape android:shape="oval">
        <stroke  android:width="4dp" android:color="#66ffcc"/>
            <size
                android:width="5dp"
                android:height="5dp">
            </size>
    </shape>
</item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke  android:width="4dp" android:color="#66eeff"/>
            <size
                android:width="5dp"
                android:height="5dp">
            </size>
        </shape>
    </item>

</selector>