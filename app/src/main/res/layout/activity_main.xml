<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_colors"
    >

    <LinearLayout
        android:id="@+id/ll_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:focusable="false"
            android:singleLine="true"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/le_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/bt_border"
            android:text="C"
            android:textSize="40sp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="รท"
            android:textSize="40sp"
            android:id="@+id/btn_divide"
            android:background="@drawable/bt_border"/>
        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_border"
            android:text="X"
            android:textColor="#000000"
            android:textSize="40sp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="T"
            android:textSize="40sp"
            android:id="@+id/btn_del"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/bt_border"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/le_2"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/bt_border"
            android:text="7"
            android:textSize="30sp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/btn_8"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30sp"
            android:id="@+id/btn_9"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="50sp"
            android:id="@+id/btn_minus"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/le_3"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30sp"
            android:id="@+id/btn_4"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/btn_5"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/btn_6"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="40sp"
            android:textColor="#000000"
            android:id="@+id/btn_plus"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/le_4"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/btn_1"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30sp"
            android:id="@+id/btn_2"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30sp"
            android:id="@+id/btn_3"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="40sp"
            android:id="@+id/btn_point"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_border"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/le_5"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="("
            android:textSize="30sp"
            android:id="@+id/btn_left"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/bt_border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/btn_0"
            android:background="@drawable/bt_border"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/bt_border"
            android:text=")"
            android:textSize="30sp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30sp"
            android:id="@+id/btn_equal"
            android:textColor="#000000"
            android:background="@drawable/bt_border"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>